<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="NumberInput" parent="TextAppearance.AppCompat">
        <item name="android:background">@drawable/rounded_corners</item>

        <item name="android:inputType">numberSigned</item>
        <item name="android:text">0</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:ems">10</item>
        <item name="android:textSize">17sp</item>
        <item name="android:labelTextSize">17sp</item>
        <item name="android:fontFamily">@font/jet_brains</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="InputLabel" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:ems">10</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:padding">5dp</item>
    </style>

</resources>
